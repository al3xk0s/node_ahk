{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,    
    "preserveConstEnums": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "declarationMap": true,    
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "alwaysStrict": true,    
    "paths": {
      "@node-ahk/*": [ "./src/*" ]
    }
  },  
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",    
    "node_modules"
  ]
}